#!/bin/sh

termid=`echo $QUERY_STRING | sed '
	/\(.*&\|^\)termid=\([^&]*\)\(&.*\|$\)/!d
	s//\2/
'`

cat <<EOF
Content-type: text/html


<!DOCTYPE html>
<meta charset='utf-8'/>
<meta http-equiv="expires" content="-1" />
<meta http-equiv="Pragma" content="no-cache" />
<meta http-equiv="Cache-Control" content="no-cache" />
<html>
<head>
<title>LOG [$termid]</title>
<style>
body {
	background: black;
	margin-left: 0px;
	margin-top: 0px;
	margin-bottom: 0px;
}
#content {
	resize: none;
	background: black;
	white-space: pre;
	overflow: auto;
	color: white;
	width: calc(100vw - 1em);
	height: calc(100vh - 1em);
	margin-left: 0.2em;
	margin-top: 0.2em;
}
</style>
<script>
function contentel() { return document.getElementById('content'); }

function scrollbottom()
{
	var el = contentel();
	el.scrollTop = el.scrollHeight;
	el.setSelectionRange(el.value.length, el.value.length);
	el.focus();
}

document.onkeydown = function(ev)
{
	if (ev.key != 'Enter') return;
	if (ev.metaKey || ev.shiftKey || ev.ctrlKey || ev.altKey) return;

	var el = contentel();

	/* Automatically omit the last newline in selection. */
	if (el.value[el.selectionEnd-1] == '\n') el.selectionEnd--;

	document.execCommand('copy');
	window.close();
};

</script>
</head>
<body onload="scrollbottom()">
<textarea spellcheck=false id=content>
EOF

# Use find rather than ls to avoid extra matches when $termid is empty.
find "$WERMDIR/var" \
	-mindepth 4 \
	-name "$termid" \
	-type f \
	-not -path '*/hist/*' \
| sort \
| tail -n 2 \
| while read fn; do
	echo "--- SCROLLBACK $fn ---"
	cat "$fn"
done \
| sed '
	s/&/\&amp;/g
	s/</\&lt;/g
	s/>/\&gt;/g
'

cat <<'EOF'
</textarea>
</body>
</html>
EOF
