logfile=/tmp/log.$1
shift

# Dump log. Makes a script generated by `script` readable and grep'able
dl () {
	sed -f $WERMDIR/clean_script.sed $logfile
}

dltf () {
	tail -f $logfile | sed -uf $WERMDIR/clean_script.sed
}

# grep log
gl () {
	dl | grep "$@"
}

# browse (less) log
lel () {
	dl | less "$@"
}

# browse binary (xxd | less) log
xll () {
	xxd $logfile | less
}
